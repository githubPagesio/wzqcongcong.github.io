<footer id="footer">
  <% if (theme.sidebar === 'bottom'){ %>
    <%- partial('_partial/sidebar') %>
  <% } %>
  <div class="outer">
    <div id="footer-info" class="inner">
      &copy; <% if (config.since && config.since != date(new Date(), 'YYYY')){ %><%= config.since %> - <% } %><%= date(new Date(), 'YYYY') %> <%= config.author || config.title %><br>
      Powered by <a href="https://hexo.io/" target="_blank">Hexo</a> & <a href="https://eager.io/" target="_blank">Eager</a>. Theme by <a href="https://github.com/ppoffice">PPOffice</a>
    </div>
    <div style="display: none">
      <% for (i = 1; i <= 4; ++i) { %>
      	<% idIndex = "favicon_" + i %>
      	<% srcIndex = "/favicon." + i + ".ico" %>
        <img id=<%= idIndex %> src=<%= srcIndex %>>
      <% } %>
    </div>
  </div>
</footer>